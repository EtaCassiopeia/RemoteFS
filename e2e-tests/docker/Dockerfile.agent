# Remote Agent Dockerfile (Simulating macOS)
FROM rust:1.75 AS builder

WORKDIR /app
COPY . .

# Build the agent
RUN cargo build --release --bin remotefs-agent

# Runtime image with development tools
FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    git \
    curl \
    wget \
    vim \
    nano \
    tree \
    jq \
    python3 \
    python3-pip \
    nodejs \
    npm \
    procps \
    psmisc \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy the binary
COPY --from=builder /app/target/release/remotefs-agent /app/remotefs-agent

# Create directories
RUN mkdir -p /app/config /app/workspace /app/test-results

# Install some common development tools that might be on a macOS machine
RUN npm install -g typescript @types/node

# Simulate macOS user environment
RUN useradd -m -s /bin/bash macos-user
RUN chown -R macos-user:macos-user /app/workspace

EXPOSE 9090

# Start the agent
CMD ["/app/remotefs-agent", "--config", "/app/config/agent.toml"]
